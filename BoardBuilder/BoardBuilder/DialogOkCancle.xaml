<Window x:Class="BoardBuilder.DialogOkCancel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardBuilder"
        mc:Ignorable="d"
        Title="&lt;Title&gt;" Height="166.917" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="cancelButton" Content="Cancel" Margin="10,0,0,10" VerticalAlignment="Bottom" IsCancel="True" Grid.Column="1" Height="20" HorizontalAlignment="Left" Width="75" Grid.Row="1"/>
        <Button x:Name="okButton" Content="OK" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" IsDefault="True" HorizontalAlignment="Right" Width="75" Click="okButton_Click" Grid.Row="1"/>
        <TextBlock x:Name="messageLabel" Text="&lt;message&gt;" Margin="10,10,10,0" Grid.ColumnSpan="2" TextAlignment="Center" TextWrapping="Wrap"/>

    </Grid>
</Window>
